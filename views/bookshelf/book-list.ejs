<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">

</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if (books.length > 0) { %>
         <div class="grid">
             <% for (let book of books) { %>
                <article class="card book-item">
                    <header class="card__header">
                        <h1 class="book__title"><%= book.title %></h1>
                    </header>
                    <div class="card__book cover">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
                    </div>
                    <div class="card__content">
                        <p class="book__category">comic</p>
                        <p class="book__description">A very interesting book about so many even more interesting things!</p>
                        <p class="book__publication date">19-Dec-1994</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Archive</button>
                    </div>
                </article>
                <% } %>
        </div>
        <% } else {%>
            <h1>No Book Found!</h1>
    </main>   
<%- include('includes/end.ejs') %>